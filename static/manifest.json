{
  "manifest_version": 2,
  "name": "Tomato",
  "description": "Customizable Pomodoro Timer for Chrome",
  "version": "0.1",
  "permissions": [
    "contextMenus",
    "notifications",
  ],
  "background": {
    "scripts": ["main-bundle.js"]
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "64": "icon64.png",
    "128": "icon128.png",
    "256": "icon256.png",
    "512": "icon512.png"
  },
  "web_accessible_resources": [
    "*.png"
  ],
  "options_page": "options.html"
}
