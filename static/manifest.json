{
  "manifest_version": 2,
  "name": "Tomato",
  "description": "Customizable Pomodoro Timer for Chrome",
  "version": "0.1",
  "permissions": [
    "contextMenus",
    "notifications",
    "tabs"
  ],
  "background": {
    "scripts": ["background-bundle.js"]
  },
  "browser_action": {
    "default_icon": "icon128.png"
  },
  "icons": {
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    "icon128.png"
  ],
  "options_page": "options.html"
}
